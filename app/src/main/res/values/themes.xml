<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YouCurse" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/vermelho</item>
        <item name="colorPrimaryVariant">@color/vermelho</item>
        <item name="colorOnPrimary">@color/branco</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/vermelho</item>
        <item name="colorSecondaryVariant">@color/vermelho</item>
        <item name="colorOnSecondary">@color/preto</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YouCurse.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.YouCurse.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YouCurse.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>